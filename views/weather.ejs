<html>
    <head>
        <title>
            Weather
        </title>
        <link rel="stylesheet" href="/style.css" type="text/css">
    </head>
    <body>
            <div class="container">
                    <div class="container__item">
                        
        <form class="form" action="/weather" method="post" >
         <input type="text" class="form__field" name="address" placeholder="Enter a City or Pin ... " required>
         <button class="btn btn--primary btn--inside uppercase" type="submit">Get Weather</button>
         </form>
         </div>
         <div class="container__item container__item--bottom" id="result">
                <% if(temperature !== null){ %>
                <%= temperature %>
                <% } %>
            </div>
        </div>
    </body>
</html>
